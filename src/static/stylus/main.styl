body
	background-color: white
	color: #270069
	font-weight: 600
	font-size: 14px

p
	margin: 0

.main
	width: 440px
	margin: 0 auto
	margin-top: 25px

.flex_block
	display: flex
	justify-content: space-between
	align-items: center

.small_text
	color: #beb8d3
	font-size: 12px

.passive
	display: flex
	div+div
		margin-left: 10px

.results
	font-weight: 500
	padding: 20px
	border: 1px solid #270069
	border-radius: 5px
	>div
		margin-top: 10px
	div
		display: flex
		.title
			margin-right: 5px
			font-weight: 600
	.count
		display: flex
		flex-direction: column


// tooltip


.rc-slider-tooltip-arrow
	display: none

.rc-slider-tooltip-inner
	border: 2px solid #e9e8eb
	border-radius: 3px
	background-color: white
	padding: 5px 4px
	color: #270069
	box-shadow: none

.rc-slider-handle
	background-color: #83c355
	border: 0

.back
	display: inline-block
	position: absolute
	margin: 15px